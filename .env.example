# ===================================
# Beefy Finance Frontend Environment Variables
# ===================================
# Copy this file to .env and adjust values as needed

# ===================================
# API Configuration
# ===================================

# Main Beefy API URL
# Default: https://api.beefy.finance
VITE_API_URL=https://api.beefy.finance

# Beefy Data API URL
# Default: https://data.beefy.finance
VITE_DATA_URL=https://data.beefy.finance

# API Zap URL
# Default: {VITE_API_URL}/zap
VITE_API_ZAP_URL=https://api.beefy.finance/zap

# CLM (Concentrated Liquidity Manager) API URL
# Default: https://clm-api.beefy.finance
VITE_CLM_URL=https://clm-api.beefy.finance

# Databarn API URL (analytics data)
# Default: https://databarn.beefy.finance/api/v1
VITE_DATABARN_URL=https://databarn.beefy.finance/api/v1

# On-ramp service URL
# Default: https://onramp.beefy.finance
VITE_ONRAMP_URL=https://onramp.beefy.finance

# ===================================
# Feature Flags
# ===================================

# Enable detailed tooltips throughout the app
# Values: 'true' | 'false'
# Default: false
VITE_DETAILED_TOOLTIPS=false

# ===================================
# Router Configuration
# ===================================

# Router mode for React Router
# Values: 'browser' | 'hash'
# Default: hash (browser mode if set to 'browser')
VITE_ROUTER=hash

# ===================================
# Build Configuration
# ===================================

# Enable bundle analyzer (for development)
# Values: any value to enable, empty to disable
# Default: empty (disabled)
ANALYZE_BUNDLE=

# Node environment
# Values: 'development' | 'production'
# Default: development
NODE_ENV=development

# Disable CSS class hashing in production builds
# Values: 'true' | any other value
# Default: false (hashing enabled)
CSS_DISABLE_HASH=

# ===================================
# Blockchain RPC Configuration
# ===================================
# Chain-specific RPC endpoints can be set using the pattern:
# {CHAIN_ID}_RPC=https://rpc-url-for-chain
# 
# Examples:
# ETH_RPC=https://mainnet.infura.io/v3/your-key
# BSC_RPC=https://bsc-dataseed.binance.org/
# POLYGON_RPC=https://polygon-rpc.com/
# FANTOM_RPC=https://rpc.ftm.tools/
# ARBITRUM_RPC=https://arb1.arbitrum.io/rpc
# OPTIMISM_RPC=https://mainnet.optimism.io/
# AVAX_RPC=https://api.avax.network/ext/bc/C/rpc

# ===================================
# Optional API Keys
# ===================================

# Tenderly Configuration (Optional - for transaction simulation)
# Get these from https://dashboard.tenderly.co/
# VITE_TENDERLY_ACCOUNT=your-tenderly-account
# VITE_TENDERLY_PROJECT=your-tenderly-project  
# VITE_TENDERLY_SECRET=your-tenderly-access-key

# WalletConnect Project ID
# Get your own from https://cloud.walletconnect.com/
# Default: af38b343e1be64b27c3e4a272cb453b9 (Beefys Project ID)
VITE_WALLETCONNECT_PROJECT_ID=af38b343e1be64b27c3e4a272cb453b9


# ===================================
# Development Server Configuration
# ===================================

# Development server port
# Default: 5173 (Vite default)
VITE_PORT=5173

# Development server host
# Default: localhost
VITE_HOST=localhost
